<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Hashtags</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>28th August 2019</creationDate>
	<copyright>Copyright (C) 2009 - 2018 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>2.2.41</version>
	<description><![CDATA[MOD_EASYSOCIAL_HASHTAGS_DESC]]></description>
	<files>
		<folder>tmpl</folder>
		<filename module="mod_easysocial_hashtags">mod_easysocial_hashtags.php</filename>
		<filename>mod_easysocial_hashtags.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_hashtags.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_hashtags.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_easysocial/models/fields">
				<field name="total" type="text" class="input-mini text-center" default="10" label="MOD_EASYSOCIAL_HASHTAGS_TOTAL_HASHTAGS" description="MOD_EASYSOCIAL_HASHTAGS_TOTAL_HASHTAGS_DESC" />
			</fieldset>

			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
