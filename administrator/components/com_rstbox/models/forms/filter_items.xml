<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" addfieldpath="administrator/components/com_rstbox/models/forms/fields">
		<field name="search" type="text"
			label="JSEARCH_FILTER_LABEL"
			hint="JSEARCH_FILTER"
		/>
		<field name="state" type="status"
			filter="-2,0,1"
			label="JPUBLISHED"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field name="boxtype" type="boxtypes"
			label="Type"
			onchange="this.form.submit();">
			<option value="">COM_RSTBOX_FILTERS_SELECT_BOX_TYPE</option>
		</field>
		<field
			name="triggermethod"
			type="list"
			label="Type"
			onchange="this.form.submit();">
            <option value="">COM_RSTBOX_FILTERS_SELECT_TRIGGER_POINT</option>
            <option value="pageheight">COM_RSTBOX_ITEM_TRIGGER_PAGEHEIGHT</option>
            <option value="element">COM_RSTBOX_ITEM_TRIGGER_ELEMENT</option>
            <option value="pageready">COM_RSTBOX_ITEM_TRIGGER_PAGEREADY</option>
            <option value="pageload">COM_RSTBOX_ITEM_TRIGGER_PAGELOAD</option>
            <option value="userleave">COM_RSTBOX_ITEM_TRIGGER_USERLEAVE</option>
            <option value="onclick">COM_RSTBOX_ITEM_TRIGGER_ONCLICK</option>
            <option value="elementHover">COM_RSTBOX_ITEM_ELEMENT_HOVER</option>
            <option value="ondemand">COM_RSTBOX_ITEM_TRIGGER_DEMAND</option>
		</field>
        <field 
            name="usergroups" type="usergrouplist" 
            label="Usergroups" 
            onchange="this.form.submit();">
            <option value="">COM_RSTBOX_FILTERS_SELECT_USER_GROUP</option>
        </field>
        <field name="devices" type="list" 
            label="Devices" 
            onchange="this.form.submit();">
            <option value="">COM_RSTBOX_FILTERS_SELECT_DEVICE</option>
            <option value="desktop">NR_DESKTOPS</option>
            <option value="mobile">NR_MOBILES</option>
            <option value="tablet">NR_TABLETS</option>
        </field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="NR_LIST_FULL_ORDERING"
			description="NR_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.published ASC">JSTATUS_ASC</option>
			<option value="a.published DESC">JSTATUS_DESC</option>
			<option value="a.name ASC">JGLOBAL_TITLE_ASC</option>
			<option value="a.name DESC">JGLOBAL_TITLE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="NR_LIST_LIMIT"
			description="NN_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
